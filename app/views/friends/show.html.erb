 <!-- Jumbotron -->
<div class="p-5 text-center bg-light">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
    <%= @friend.email %>  | 
    <%= @friend.phone %>  |  
    <%= @friend.instagram %>
  </p>
  <br/>
  
  <%if @friend.user == current_user %>
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %> |
  <%end%>

  <%= link_to 'Back', friends_path, class:"btn btn-dark" %>

  <%if @friend.user == current_user %>
    <%= button_to 'Delete', @friend, method: :delete, data: {confirm: "Are you sure you want to reset the indexes?" }, class: "btn btn-danger" %>
  <%end%>
</div>


